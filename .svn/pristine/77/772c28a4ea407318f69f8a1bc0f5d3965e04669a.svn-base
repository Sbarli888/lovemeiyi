<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:orientation="vertical"
  	android:layout_width="match_parent"
  	android:layout_height="match_parent"
  	android:background="@color/white">
  
	<TextView android:id="@+id/basic_title_text_view"
	  android:layout_width="match_parent"
	  android:layout_height="wrap_content"
	  android:textColor="@color/black"
	  android:background="@color/pink"
	  android:textSize="20dip"
	  android:paddingTop="10dip"
	  android:paddingBottom="10dip"
	  android:paddingLeft="5dip" />
	  
	<ScrollView
	  android:orientation="vertical"
	  android:layout_width="match_parent"
	  android:layout_height="match_parent"
	  android:layout_alignParentLeft="true"
	  android:layout_below="@id/basic_title_text_view">
	  
	  <LinearLayout android:layout_width="match_parent"
	  	android:layout_height="match_parent"
	  	android:visibility="visible"
	  	android:id="@+id/goods_basic_info_sub_root"
	  	android:layout_alignParentLeft="true"
	  	android:layout_below="@id/basic_title_text_view"
	  	android:orientation="vertical">
		  
		  <ImageView android:id="@+id/basic_image_view"
		  	android:layout_width="wrap_content"
		  	android:layout_height="wrap_content"
		  	android:scaleType="centerInside"
		  	android:layout_gravity="center"
		  	android:layout_marginLeft="@dimen/margin_horizontal_forty"
		  	android:layout_marginRight="@dimen/margin_horizontal_forty"
		  	android:layout_marginBottom="@dimen/margin_vertical_ten"/>
		  	
		  <LinearLayout android:id="@+id/basic_buttons" 
		  	android:layout_width="match_parent"
		  	android:layout_height="wrap_content"
		  	android:orientation="horizontal">
		  	<Button android:id="@+id/buy_it_now_button"
		  		android:layout_width="wrap_content"
		  		android:layout_height="wrap_content"
		  		android:text="@string/buy_it_now_text"
		  		android:layout_weight="1"/>
		  	<Button android:id="@+id/share_weibo_button"
		  		android:layout_width="wrap_content"
		  		android:layout_height="wrap_content"
		  		android:text="@string/share_weibo_text"
		  		android:layout_weight="1"/>
		  </LinearLayout>
		  <LinearLayout android:id="@+id/basic_middle_content"
		  	android:layout_width="match_parent"
		  	android:layout_height="wrap_content"
		  	android:orientation="vertical">
		  	
		  	<TextView android:id="@+id/goods_basic_info"
		  		android:layout_width="match_parent"
		  		android:layout_height="wrap_content"
		  		android:textColor="@android:color/black"/>
		  	<TextView android:id="@+id/check_details"
		  		android:layout_width="match_parent"
		  		android:layout_height="wrap_content"
		  		android:layout_marginLeft="@dimen/margin_horizontal_ten"
		  		android:layout_marginRight="@dimen/margin_horizontal_ten"
		  		android:layout_marginTop="@dimen/margin_vertical_ten"
		  		android:text="@string/check_details"
		  		android:textColor="@android:color/black"
		  		android:textSize="20dip"
		  		android:background="@color/gainsboro"
		  		android:gravity="center"
		  		android:paddingTop="10dip"
		  		android:paddingBottom="10dip"/>
		  	<LinearLayout android:id="@+id/basic_tips_root"
		  		android:layout_width="match_parent"
		  		android:layout_height="wrap_content"
		  		android:orientation="vertical"
		  		android:layout_marginTop="@dimen/margin_vertical_ten"
		  		android:layout_marginBottom="@dimen/margin_vertical_ten" >
		  	</LinearLayout>
	
			<TextView android:id="@+id/contact_info"
			  	android:layout_width="match_parent"
			  	android:layout_height="wrap_content"
			  	android:text="@string/contact_info"
			  	android:textColor="@color/chocolate"
			  	android:textSize="@dimen/big_font_size"/>
		  	<ImageView android:layout_width="match_parent"
		  		android:layout_height="@dimen/divider_height"
		  		android:layout_gravity="center"
		  		android:src="@drawable/divider"/>
		  	<TextView android:id="@+id/phone_number"
		  		android:layout_width="match_parent"
		  		android:layout_height="wrap_content"
		  		android:layout_marginLeft="10dip"
		  		android:layout_marginBottom="10dip"
		  		android:layout_marginRight="10dip"
		  		android:paddingTop="5dip"
		  		android:paddingBottom="5dip"
		  		android:gravity="center"
		  		android:background="@color/gainsboro"
		  		android:text="@string/phone_number"
		  		android:textSize="17dip"
		  		android:textColor="@android:color/black"/>
		  	<TextView android:id="@+id/qq_number"
		  		android:layout_width="match_parent"
		  		android:layout_height="wrap_content"
		  		android:layout_marginLeft="10dip"
		  		android:layout_marginRight="10dip"
		  		android:paddingTop="5dip"
		  		android:paddingBottom="5dip"
		  		android:gravity="center"
		  		android:background="@color/gainsboro"
		  		android:text="@string/qq_number"
		  		android:textSize="17dip"
		  		android:textColor="@android:color/black"/>
		  </LinearLayout>
		  
		  <LinearLayout android:id="@+id/comments_related"
		  	android:layout_width="match_parent"
		  	android:layout_height="wrap_content"
		  	android:layout_marginTop="10dip"
		  	android:orientation="horizontal">
		  	<Button android:id="@+id/write_comments_button"
		  		android:layout_width="wrap_content"
		  		android:layout_height="wrap_content"
		  		android:layout_weight="1"
		  		android:gravity="center"
		  		android:text="@string/write_comments" />
		  	<Button android:id="@+id/check_comments_button"
		  		android:layout_width="wrap_content"
		  		android:layout_height="wrap_content"
		  		android:layout_weight="1"
		  		android:gravity="center"
		  		android:text="@string/check_comments"/>
		  </LinearLayout>
	  
	  </LinearLayout>
    
	</ScrollView>
</RelativeLayout>















