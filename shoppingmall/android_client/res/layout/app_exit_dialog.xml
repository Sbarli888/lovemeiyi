<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  android:id="@+id/app_exit_dialog"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  
  <ImageView android:id="@+id/exit_background"
  	android:layout_centerInParent="true"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content"
  	android:src="@drawable/shanks" />
  <Button android:id="@+id/exit_button_ok" 
  	android:layout_alignBottom="@id/exit_background"
  	android:layout_alignLeft="@id/exit_background"
  	android:layout_marginBottom="6dip"
  	android:layout_marginLeft="12dip" 
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content" />
  <Button android:id="@+id/exit_button_cancel"
  	android:layout_alignBottom="@id/exit_background"
  	android:layout_alignRight="@id/exit_background"
  	android:layout_marginBottom="6dip"
  	android:layout_marginRight="12dip"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content" />
    
</RelativeLayout>











