<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    			<LinearLayout android:gravity="left" 
			    android:orientation="horizontal" 
			    android:id="@+id/search_shake" 
			    android:clickable="true" 
			    android:layout_width="wrap_content" 
			    android:layout_height="wrap_content" 
			    android:layout_marginLeft="5.0dip" 
			    android:layout_weight="1.0" 
			    style="@style/common_button">
				
			   <ImageView android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:src="@drawable/app_icon_voice" 
                    android:maxWidth="25.0dip" 
                    android:maxHeight="25.0dip" />
				<TextView android:textSize="16.0dip" 
				    android:textStyle="bold" 
				    android:textColor="@color/black" 
				    android:paddingLeft="5.0dip" 
				    android:layout_width="wrap_content" 
				    android:layout_height="wrap_content" 
				    android:text="@string/search_shake" />



			</LinearLayout>
			
            <LinearLayout android:gravity="right" 
                android:orientation="horizontal" 
                android:id="@+id/search_voice_btn" 
                android:clickable="true" 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content" 
                android:layout_marginLeft="5.0dip" 
                android:layout_weight="1.0" 
                style="@style/common_button">
				
                <ImageView android:layout_width="wrap_content" 
                    android:layout_height="wrap_content" 
                    android:src="@drawable/app_icon_voice" 
                    android:adjustViewBounds="true" 
                    android:maxWidth="25.0dip" 
                    android:maxHeight="25.0dip" />
				<TextView
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content"
				 android:paddingLeft="5.0dip"
				 android:text="@string/search_voice"
				 android:textColor="@color/black"
				 android:textSize="16.0dip"
				 android:textStyle="bold" />
			</LinearLayout>



</merge>